{
  "builds": [
    {
      "src": "chat-app-frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "chat-app-frontend/build"
      }
    },
    {
      "src": "chat-app-backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/chat-app-frontend/build/index.html"
    },
    {
      "src": "/api/(.*)",
      "dest": "/chat-app-backend/server.js"
    }
  ]
}
